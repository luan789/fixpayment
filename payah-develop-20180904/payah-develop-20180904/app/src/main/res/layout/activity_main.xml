<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/tvPayLabelLight"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_40"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_payah_label_light" />

    <TextView
        android:layout_marginTop="@dimen/dimen_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPayLabelLight"
        android:layout_centerInParent="true"
        android:text="@string/subtitle_sabah_pay"
        android:textColor="@android:color/white" />

    <ImageView
        android:layout_width="@dimen/splash_icon_size_large"
        android:layout_height="@dimen/splash_icon_size"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_80"
        android:src="@drawable/ic_payah_large" />

</RelativeLayout>